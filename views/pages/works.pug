extends ../main-layout

block link
    link(rel="stylesheet", href="./css/works.css")

block content
    include ../parts/preloader
    include ../parts/humburger-menu
    
    .status
        .status__text
        .status__btn Закрыть
    
    .wrapper
        include ../parts/hero
        section.section.works-head
            svg(viewbox="0 0 1000 110" preserveAspectRatio="none").works-head__triangle.works-head__triangle_left
                polygon(points="0,0 0,110 1000, 110")
            svg(viewbox="0 0 1000 110" preserveAspectRatio="none").works-head__triangle.works-head__triangle_right
                polygon(points="0,110 1000,110 1000,0")
            .section-title(id="works" style="background-image: url(../img/works-header.png)")
                | Мои работы
        section.section.slider
            .slider__desc
                .slider__desc-info
                    .slider__desc-title
                        .block-title Сайт школы онлайн образования
                    .slider__desc-skills
                        | HTML, css, javascript
                    .slider__desc-btn
                        a(href="#").btn Посмотреть сайт
            .slider__display
                .slider__display-img
                    img(src="../img/1.png" alt="").slider__display-pic
                .slider__btns
                    a(href="#").slider__btn.slider__btn_left
                        img(src="../img/down.jpg" alt="")
                    a(href="#").slider__btn.slider__btn_right
                        img(src="../img/up.jpg" alt="")
    
                    
        include ../parts/reviews
        include ../parts/footer
        
    script(type="text/javascript", src="js/common.js")
    script(type="text/javascript", src="js/works.js")
        